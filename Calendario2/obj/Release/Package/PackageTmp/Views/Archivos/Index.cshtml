@model IEnumerable<Calendario2.Models.Archivo>

@{
    ViewBag.Title = "Lista de Archivos por Carpeta o Tema XcursoR";
}




<table class="tb2">
    <tr>
        <td>
            <h2>Lista de Archivos por Tema - XcursoR</h2>
            <p>@ViewBag.tema</p>
            <h2>@TempData["Msg"]</h2>
        </td>
        <td class="SideL">
            @Html.ActionLink("Nuevo Archivo +", "Create", "Archivos", new { @IdTema = ViewBag.IdTema, @tema = ViewBag.Nombre  }, new { @class = "LNK1" })
        </td>
    </tr>
</table>






@using (Html.BeginForm("Index", "Archivos", FormMethod.Get))
{
    <p>
        @Html.Label("Tema ó Carpeta")

        @ViewBag.Tema
    </p>
}
<table class="table">
    <tr>
        <th>
            Nombre Archivo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Nombre, "Download", "Downloads", new { ImageName = @item.Nombre.ToString(), Tema = item.Nombre }, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, @Nombre = ViewBag.Nombre })
            </td>
        </tr>
    }

</table>
