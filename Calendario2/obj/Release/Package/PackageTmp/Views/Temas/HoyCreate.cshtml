            @Html.TextBoxFor(model => model.FechaHora, "{0:yyyy-MM-ddThh:mm:ss}", new { @class = "form-control", @type = "datetime-local", @Value = ViewBag.FechaHora.ToString() })
            @Html.ValidationMessageFor(model => model.FechaHora, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Verificado, htmlAttributes: new { @class = "control-label col-md-2" })
